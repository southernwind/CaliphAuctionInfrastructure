## Full HTTPS configuration for multi-domain setup

# Common TLS settings snippet (can refactor to include file later if desired)
map $host $is_www {
    default 0;
    www.caliphauction.com 1;
}

# 1. Apex (redirect permanently to www over HTTPS)
server {
    listen 80;
    server_name caliphauction.com;
    location /.well-known/acme-challenge/ { root {{ letsencrypt_webroot }}; }
    location / { return 301 https://www.caliphauction.com$request_uri; }
}
server {
    listen 443 ssl http2;
    server_name caliphauction.com;
    ssl_certificate     /etc/letsencrypt/live/{{ letsencrypt_domains[0] }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ letsencrypt_domains[0] }}/privkey.pem;
    location / { return 301 https://www.caliphauction.com$request_uri; }
    location /.well-known/acme-challenge/ { root {{ letsencrypt_webroot }}; }
}

# 2. WWW (primary frontend)
server {
    listen 80;
    server_name www.caliphauction.com;
    location /.well-known/acme-challenge/ { root {{ letsencrypt_webroot }}; }
    location / { return 301 https://www.caliphauction.com$request_uri; }
}
server {
    listen 443 ssl http2;
    server_name www.caliphauction.com;
    ssl_certificate     /etc/letsencrypt/live/{{ letsencrypt_domains[0] }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ letsencrypt_domains[0] }}/privkey.pem;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header X-Content-Type-Options nosniff;
    add_header X-Frame-Options SAMEORIGIN;
    add_header X-XSS-Protection "1; mode=block";
    location / { root {{ nginx_front_root }}; try_files $uri $uri/ /index.html; }
    location /.well-known/acme-challenge/ { root {{ letsencrypt_webroot }}; }
    location /cdn/ { alias {{ nginx_cdn_root }}/; access_log off; expires 30d; add_header Cache-Control "public, max-age=2592000"; }
    location /api/ {
        proxy_pass {{ nginx_backend_upstream }}/api/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection keep-alive;
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

